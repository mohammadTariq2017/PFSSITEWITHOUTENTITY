@model PFSSITEWITHOUTENTITY.ViewModel.ClassVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClassId" />
            <div class="form-group">
                <label asp-for="SessionId" class="control-label"></label>
                <select class="form-control" asp-for="SessionId" asp-items="ViewBag.SessionId">
                    <option value="">Select Session</option>
                </select>
                <span asp-validation-for="SessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassName" class="control-label"></label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="right m-t-10">
                        <input type="submit" value="Save" class="btn btn-sm btn-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-secondary">View All</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
